<%-include ("navbar.ejs") %>
<%- include("searchbar.ejs") %>
<div class="top-div">
    <form class="form-horizontal" action="/back" method="post">
        <button type="submit" class="back-button">Back</button>
        <%if (user.id == idToMatch){%>
            <button type="submit" class="revolution">Edit</button>
        <%}%>

    </form>
</div>
<div class="full-page">
    <div class="given-blog">
    <h1><%=title%></h1>
    <h2><%=name%></h2>
    <p id="time"><%=time%></p>
    <p id="text"><%=content%></p>
    </div>
</div>

<div class="more-from-me">
    <h2 class="more">More from <%=name%></h2>
    <%more.forEach((n)=>{%>
        <h1><%=n.title%></h1>
        <p><%=n.created_at%></p>
    <%})%>
</div>


